<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".main.MainActivity">

    <Button
        android:id="@+id/life_cycle_scope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LifeCycleScope" />

    <Button
        android:id="@+id/view_model_scope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ViewModelScope" />

    <Button
        android:id="@+id/global_scope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Global Scope" />

    <Button
        android:id="@+id/custom_scope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="custom_scope" />

</LinearLayout>